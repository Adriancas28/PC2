@model IEnumerable<PC2.Models.Banco>


<h2>Lista de Cuentas Bancarias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre del Titular</th>
            <th>Tipo de Cuenta</th>
            <th>Saldo Inicial</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())

        {
            @foreach (var banco in Model)

            {
                <tr>
                    <td>@banco.Id</td>
                    <td>@banco.NombreTitular</td>
                    <td>@banco.TipoCuenta</td>
                    <td>@banco.SaldoInicial</td>
                    <td>@banco.Email</td>
                </tr>
            }
        }

        else

        {
            <tr>
                <td colspan="5">No hay registros de bancos disponibles.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Registro">Crear Nueva Cuenta</a>
</div>
